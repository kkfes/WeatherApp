<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    tools:context=".ApiKeyActivity">

    <TextView
        android:id="@+id/title"
        android:text="@string/enter_api_key"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/apiInput"
        android:background="@drawable/background_chat_input"
        android:textColor="@color/white"
        android:textColorHint="@color/secondary_text"
        android:hint="@string/api_key_enter"
        android:paddingStart="@dimen/_20ssp"
        android:paddingEnd="@dimen/_20ssp"
        android:textSize="@dimen/_11ssp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/addAPI"
        app:layout_constraintTop_toBottomOf="@id/apiInput"
        android:background="@drawable/button_bg"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_90sdp"
        android:layout_marginEnd="@dimen/_90sdp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/set_key"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:text="@string/get_api_key"
        android:textColor="@color/secondary_text"
        android:gravity="right"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:textSize="@dimen/_10sdp"
        android:autoLink="web"
        android:layout_marginStart="@dimen/_50sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>